<header class="header-global">
  {%- for link in linklists -%}
  {%- endfor -%}

  {%- comment -%} LOGO {%- endcomment -%}
  <a href="/" class="logo">
    <img src="{{ 'logo.svg' | asset_url }}" alt="{{v'general.shop.title' | t }}">
  </a>

  {%- comment -%} CART COUNT {%- endcomment -%}
  <a href="/" class="shop-link text-link">{{ 'header.nav.shop' | t }} </a>

  {%- assign cart_text = 'cart.button.count_html' | t: itemCount: cart.item_count -%}
  {%- assign cart_close_text = 'cart.button.close' | t -%}

  {%- comment -%} CART LINK  {%- endcomment -%}
  <a href="/cart" class="cart-link text-link js-cart-link">
    <span class="cart-text">{{ cart_text }}</span>
    <span class="cart-close-text">{{ cart_close_text }}</span>
  </a>
</header>
