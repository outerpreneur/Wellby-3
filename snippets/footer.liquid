<footer class="footer-global">
  {%- comment -%} TOP FOOTER  {%- endcomment -%}
  <div class="footer-top">
    <ul class="products-list">
      {{ 'footer.list.products' | t }}
    </ul>
    <ul class="contact-list">
      {{ linklists.footer.title }}
      {% for link in linklists.footer.links %}
        <li>
          {% assign child_list_handle = link.title | handleize %}
          {% if linklists[child_list_handle].links != blank %}
            <a href="{{ link.url }}">{{ link.title }}</a>
            [
            {%- for childlink in linklists[child_list_handle].links %}
              <a href="{{ childlink.url }}">{{ childlink.title | escape }}</a>
            {% endfor -%}
            ]
          {% else %}
            <a href="{{ link.url }}">{{ link.title }}</a>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
    <div class="about-us">
      {{ 'general.about.title' | t }}
      <p>{{ 'general.about.description' | t }}</p>
    </div>
  </div>
  {%- comment -%} BOTTOM FOOTER {%- endcomment -%}
  <div class="footer-bottom">
    {%- assign copyright_date = 'now' | date: '%Y' -%}
    <span>{{ 'footer.bottom.copyright' | t: date: copyright_date }} </span>
    <div class="social-links">
      <a href="{{ 'footer.social.facebook_url '}}" target="new">
        <img src="{{ 'facebook.svg' | asset_url }}" alt="{{ 'footer.social.alt' | t: social: 'facebook' }}">
      </a>

      <a href="https://www.instagram.com/{{ 'footer.social.instagram_handle '}}" target="new">
        <img src="{{ 'instagram.svg' | asset_url }}" alt="{{ 'footer.social.alt' | t: social: 'instagram' }}">
      </a>

      <a href="https://www.twitter.com/{{ 'footer.social.twitter_handle '}}" target="new">
        <img src="{{ 'twitter.svg' | asset_url }}" alt="{{ 'footer.social.alt' | t: social: 'twitter' }}">
      </a>
    </div>
  </div>

  {%- comment -%}
  {%- endcomment -%}
</footer>
